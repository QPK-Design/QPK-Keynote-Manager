<Window x:Class="QPK_Keynote_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QPK Keynote Manager " 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Style for misspelled words with red underline -->
        <Style x:Key="MisspelledWordStyle" TargetType="TextBlock">
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="Red"/>
        </Style>

        <!-- Style for applied/ignored rows -->
        <Style x:Key="ProcessedRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAccepted}" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsIgnored}" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Mode Toggle -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <ToggleButton x:Name="SpellCheckModeToggle" 
                         Content="Spell Check Mode" 
                         Width="150" Height="30"
                         IsChecked="{Binding IsSpellCheckMode, Mode=TwoWay}"
                         FontWeight="Bold"/>
            <TextBlock Margin="15,5,0,0" VerticalAlignment="Center" 
                      Text="Toggle to switch between Find &amp; Replace and Spell Check modes"/>
        </StackPanel>

        <!-- Find & Replace Panel -->
        <StackPanel x:Name="FindReplacePanel" Grid.Row="1" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Find:" 
                          VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="FindTextBox" Grid.Row="0" Grid.Column="1" 
                        Height="25" Margin="0,0,10,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Replace:" 
                          VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="ReplaceTextBox" Grid.Row="1" Grid.Column="1" 
                        Height="25" Margin="0,0,10,5"/>

                <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" 
                           VerticalAlignment="Center" Margin="10,0,0,0">
                    <CheckBox x:Name="caseSensitiveToggle" 
                             Content="Case Sensitive" 
                             Margin="0,0,0,5"/>
                    <Button Content="Preview" Click="PreviewFindReplace_Click" 
                           Width="100" Height="25" Margin="0,0,0,5"/>
                    <Button Content="Replace All" Click="ReplaceAll_Click" 
                           Width="100" Height="25" Margin="0,0,0,5"/>
                    <Button Content="Replace Selected" Click="ReplaceSelected_Click" 
                           Width="100" Height="25"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Spell Check Panel -->
        <StackPanel x:Name="SpellCheckPanel" Grid.Row="1" Margin="0,0,0,10" 
                   Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Spell Check" FontSize="16" FontWeight="Bold" 
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Click 'Run Spell Check' to find misspelled words in all keynote comments." 
                              TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Navigate through errors using Next/Previous buttons, then Accept or Ignore each one." 
                              TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Button Content="Run Spell Check" Click="RunSpellCheck_Click" 
                           Width="120" Height="30" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Apply All" Click="ApplyAllSpelling_Click" 
                           Width="120" Height="25" Margin="0,0,0,5"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Results DataGrid (Find & Replace) -->
        <DataGrid x:Name="ResultsDataGrid" Grid.Row="2" 
                 AutoGenerateColumns="False"
                 ItemsSource="{Binding ReplaceResults}"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="80"/>
                <DataGridTextColumn Header="Schedule" Binding="{Binding ScheduleName}" Width="150"/>
                <DataGridTextColumn Header="Sheet" Binding="{Binding Sheet}" Width="150"/>

                <DataGridTemplateColumn Header="Found" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="{Binding FoundPrefix, Mode=OneWay}"/>
                                <Run Text="{Binding FoundWord, Mode=OneWay}" 
                                     Background="Yellow" FontWeight="Bold"/>
                                <Run Text="{Binding FoundSuffix, Mode=OneWay}"/>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Replace With" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="{Binding ReplPrefix, Mode=OneWay}"/>
                                <Run Text="{Binding ReplWord, Mode=OneWay}" 
                                     Background="LightGreen" FontWeight="Bold"/>
                                <Run Text="{Binding ReplSuffix, Mode=OneWay}"/>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridCheckBoxColumn Header="Applied" Binding="{Binding IsApplied, Mode=OneWay}" 
                                       Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Spelling Results DataGrid -->
        <Grid x:Name="SpellingDataGrid" Grid.Row="2" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Navigation Bar -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" 
                   Padding="10" Margin="0,0,0,10" Background="WhiteSmoke">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="◀ Previous" Click="PreviousSpelling_Click" 
                               Width="90" Height="25" Margin="0,0,5,0"
                               IsEnabled="{Binding CanNavigatePrevious}"/>
                        <Button Content="Next ▶" Click="NextSpelling_Click" 
                               Width="90" Height="25"
                               IsEnabled="{Binding CanNavigateNext}"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              FontWeight="Bold">
                        <Run Text="Error "/>
                        <Run Text="{Binding CurrentSpellingDisplayNumber, Mode=OneWay}"/>
                        <Run Text=" of "/>
                        <Run Text="{Binding SpellingResults.Count, Mode=OneWay}"/>
                    </TextBlock>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="AcceptButton" Content="✓ Accept" 
                               Click="AcceptSpelling_Click" 
                               Width="90" Height="25" Margin="0,0,5,0"
                               Background="LightGreen" FontWeight="Bold"/>
                        <Button x:Name="IgnoreButton" Content="✗ Ignore" 
                               Click="IgnoreSpelling_Click" 
                               Width="90" Height="25" Margin="0,0,5,0"/>
                        <Button x:Name="AddToDictionaryButton" Content="+ Add to Dictionary" 
                               Click="AddToDictionary_Click" 
                               Width="130" Height="25"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Current Error Details -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CurrentErrorPanel" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Number:" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                  Text="{Binding SpellingResults[CurrentSpellingIndex].Number}" 
                                  Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Schedule:" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                  Text="{Binding SpellingResults[CurrentSpellingIndex].ScheduleName}" 
                                  Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Sheet:" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                  Text="{Binding SpellingResults[CurrentSpellingIndex].Sheet}" 
                                  Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Misspelled:" 
                                  FontWeight="Bold" Margin="0,0,0,10" 
                                  VerticalAlignment="Top"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                  Text="{Binding SpellingResults[CurrentSpellingIndex].MisspelledWord}"
                                  Style="{StaticResource MisspelledWordStyle}"
                                  FontSize="16" FontWeight="Bold"
                                  Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Full Comment:" 
                                  FontWeight="Bold" Margin="0,0,0,5" 
                                  VerticalAlignment="Top"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                  Text="{Binding SpellingResults[CurrentSpellingIndex].FullComment}"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"/>
                    </Grid>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Suggestions:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ListBox ItemsSource="{Binding SpellingResults[CurrentSpellingIndex].Suggestions}"
                            SelectedItem="{Binding SpellingResults[CurrentSpellingIndex].SelectedSuggestion}"
                            Height="120" Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <!-- All Errors List -->
            <DataGrid Grid.Row="2" 
                     AutoGenerateColumns="False"
                     ItemsSource="{Binding SpellingResults}"
                     SelectedIndex="{Binding CurrentSpellingIndex, Mode=TwoWay}"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     RowStyle="{StaticResource ProcessedRowStyle}"
                     MaxHeight="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="80"/>
                    <DataGridTextColumn Header="Schedule" Binding="{Binding ScheduleName}" Width="120"/>
                    <DataGridTextColumn Header="Sheet" Binding="{Binding Sheet}" Width="150"/>
                    <DataGridTextColumn Header="Misspelled Word" Binding="{Binding MisspelledWord}" Width="150"/>
                    <DataGridCheckBoxColumn Header="Accepted" Binding="{Binding IsAccepted}" Width="70"/>
                    <DataGridCheckBoxColumn Header="Ignored" Binding="{Binding IsIgnored}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>