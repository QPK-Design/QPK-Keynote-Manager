<Window x:Class="QPK_Keynote_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QPK_Keynote_Manager"
        mc:Ignorable="d"
        Title="QPK Keynote Manager"
        Height="800" Width="800">

    <Window.Resources>
        <local:ScopeKindToVisibilityConverter x:Key="ScopeKindToVisibilityConverter"/>
        <local:BindingProxy x:Key="VmProxy" Data="{Binding}"/>

        <SolidColorBrush x:Key="AccentBrush" Color="#ff8c69"/>

        <Style x:Key="HoverAccentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- You can remove this style later if you're no longer using ToggleButtons -->
        <Style x:Key="HoverAccentToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Find / Replace + Results -->
    <Grid Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===================== Find / Replace Card ===================== -->
        <Grid Grid.Row="0" Margin="10,0,10,10">
            <Border Background="#fff"
                    BorderBrush="LightGray"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Panel.ZIndex="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Find String -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Find Text"
                                   FontWeight="Bold"
                                   Margin="5,0,0,5"/>
                        <TextBox x:Name="FindTextBox"
                                 Text="{Binding FindText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 BorderBrush="Gray"
                                 BorderThickness="1"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Replace String -->
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <TextBlock Text="Replace With"
                                   FontWeight="Bold"
                                   Margin="5,0,0,5"/>
                        <TextBox x:Name="ReplaceTextBox"
                                 Text="{Binding ReplaceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 BorderBrush="Gray"
                                 BorderThickness="1"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Buttons + Scope Checkboxes -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                VerticalAlignment="Center">

                        <CheckBox Content="Keynotes"
                                  IsChecked="{Binding IsKeynotesEnabled}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>

                        <CheckBox Content="Sheet Names"
                                  IsChecked="{Binding IsSheetNamesEnabled}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>

                        <CheckBox Content="View Titles"
                                  IsChecked="{Binding IsViewTitlesEnabled}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>

                        <CheckBox Content="Case Sensitive"
                                  IsChecked="{Binding IsCaseSensitive}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>

                        <Button Content="Preview"
                                Width="100" Height="30"
                                Style="{StaticResource HoverAccentButton}"
                                Click="PreviewFindReplace_Click"/>

                        <Button Content="Replace Selected"
                                Width="130" Height="30"
                                Margin="5,0,0,0"
                                Style="{StaticResource HoverAccentButton}"
                                Click="ReplaceSelected_Click"/>

                        <Button Content="Replace All"
                                Width="100" Height="30"
                                Margin="5,0,0,0"
                                Style="{StaticResource HoverAccentButton}"
                                Click="ReplaceAll_Click"/>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Overlapping Label -->
            <TextBlock Text="Find &amp; Replace"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="20,-10,0,0"
                       Padding="4,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
        </Grid>

        <!-- ===================== Results DataGrid Card ===================== -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Border Background="#fff"
                    BorderBrush="LightGray"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Panel.ZIndex="0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Scope dropdown -->
                    <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="5,0,5,8"
                        VerticalAlignment="Center">
                        <TextBlock Text="Preview:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Width="200"
                          ItemsSource="{Binding AvailableScopes}"
                          SelectedItem="{Binding SelectedScope}"
                          DisplayMemberPath="DisplayName"/>
                    </StackPanel>

                    <!-- Results grid -->
                    <DataGrid Grid.Row="1"
                          x:Name="ResultsDataGrid"
                          ItemsSource="{Binding CurrentResults}"
                          SelectedItem="{Binding SelectedResult}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="5"
                          CanUserAddRows="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">

                        <!-- Row style -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Setter Property="Padding" Value="2"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#FFE5E5E5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="BorderBrush" Value="DarkGreen"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </Trigger>

                                    <!-- Optional: only keep if your row models have IsApplied -->
                                    <DataTrigger Binding="{Binding IsApplied}" Value="True">
                                        <Setter Property="Background" Value="#FFE0FFE0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <!-- ===================== KEYNOTES ONLY ===================== -->
                            <DataGridTextColumn Header="No."
    Binding="{Binding Number}"
    Width=".4*">
                                <DataGridTextColumn.Visibility>
                                    <Binding Source="{StaticResource VmProxy}"
             Path="Data.SelectedScope.Kind"
             Converter="{StaticResource ScopeKindToVisibilityConverter}"
             ConverterParameter="Keynotes"/>
                                </DataGridTextColumn.Visibility>
                            </DataGridTextColumn>

                            <!-- Keynotes Found Text (green) -->
                            <DataGridTemplateColumn Header="Found Text" Width="3*">
                                <DataGridTemplateColumn.Visibility>
                                    <Binding Source="{StaticResource VmProxy}"
             Path="Data.SelectedScope.Kind"
             Converter="{StaticResource ScopeKindToVisibilityConverter}"
             ConverterParameter="Keynotes"/>
                                </DataGridTemplateColumn.Visibility>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" ToolTip="{Binding FullOldComment}">
                                            <TextBlock.Inlines><Run Text="{Binding FoundPreText}"/><Run Text="{Binding FoundWordLeft}"/><Run Text="{Binding FoundWordMid}" Foreground="Green" FontWeight="Bold"/><Run Text="{Binding FoundWordRight}"/><Run Text="{Binding FoundPostText}"/></TextBlock.Inlines>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Keynotes Replaced Text (red) -->
                            <DataGridTemplateColumn Header="Replaced Text" Width="3*">
                                <DataGridTemplateColumn.Visibility>
                                    <Binding Source="{StaticResource VmProxy}"
                                         Path="Data.SelectedScope.Kind"
                                         Converter="{StaticResource ScopeKindToVisibilityConverter}"
                                         ConverterParameter="Keynotes"/>
                                </DataGridTemplateColumn.Visibility>
                                <!-- ===================== FOR SOME REASON THIS INLINES RUN HAS TO BE ON ONE LINE OR EXTRA SPACES ARE ADDED. KEEP AS IS OR IT BREAKS ===================== -->
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" ToolTip="{Binding FullNewComment}">
                                            <TextBlock.Inlines><Run Text="{Binding ReplPreText}"/><Run Text="{Binding ReplWordLeft}"/><Run Text="{Binding ReplWordMid}" Foreground="Red" FontWeight="Bold"/><Run Text="{Binding ReplWordRight}"/><Run Text="{Binding ReplPostText}"/></TextBlock.Inlines>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- ===================== SHEET NAMES ONLY ===================== -->
                            <DataGridTemplateColumn Header="Found Text" Width="3*">
                                <DataGridTemplateColumn.Visibility>
                                    <Binding Source="{StaticResource VmProxy}"
                                         Path="Data.SelectedScope.Kind"
                                         Converter="{StaticResource ScopeKindToVisibilityConverter}"
                                         ConverterParameter="SheetNames"/>
                                </DataGridTemplateColumn.Visibility>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" ToolTip="{Binding FoundText}">
                                            <TextBlock.Inlines><Run Text="{Binding FoundPreText}"/><Run Text="{Binding FoundWordLeft}"/><Run Text="{Binding FoundWordMid}" Foreground="Green" FontWeight="Bold"/><Run Text="{Binding FoundWordRight}"/><Run Text="{Binding FoundPostText}"/></TextBlock.Inlines>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Replaced Text" Width="3*">
                                <DataGridTemplateColumn.Visibility>
                                    <Binding Source="{StaticResource VmProxy}"
                                         Path="Data.SelectedScope.Kind"
                                         Converter="{StaticResource ScopeKindToVisibilityConverter}"
                                         ConverterParameter="SheetNames"/>
                                </DataGridTemplateColumn.Visibility>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" ToolTip="{Binding ReplacedText}">
                                            <TextBlock.Inlines><Run Text="{Binding ReplPreText}"/><Run Text="{Binding ReplWordLeft}"/><Run Text="{Binding ReplWordMid}" Foreground="Red" FontWeight="Bold"/><Run Text="{Binding ReplWordRight}"/><Run Text="{Binding ReplPostText}"/></TextBlock.Inlines>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>





                            <!-- ===================== COMMON ===================== -->
                            <DataGridTextColumn Header="Sheet"
                                Binding="{Binding Sheet}"
                                Width="2*"/>

                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Border>

            <!-- Overlapping Label -->
            <TextBlock Text="Preview / Results"
                       FontWeight="Bold"
                       FontSize="14"
                       Background="White"
                       Foreground="Black"
                       Margin="20,-10,0,0"
                       Padding="4,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"/>
        </Grid>
    </Grid>
</Window>
