<Window x:Class="QPK_Keynote_Manager.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About — QPK Keynote Manager"
        Height="320" Width="520"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="White">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="QPK Keynote Manager"
                       FontSize="18"
                       FontWeight="Bold"/>
            <TextBlock Text="Help / About"
                       Foreground="Gray"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Content card -->
        <Border Grid.Row="1"
                BorderBrush="#FFE5E5E5"
                BorderThickness="1"
                CornerRadius="10"
                Padding="14"
                Background="#FFFDFDFD">
            <StackPanel>

                <TextBlock Margin="0,0,0,8">
                    <Run Text="Author: " FontWeight="Bold"/>
                    <Run Text="Austin Guter, Jim Marsh"/>
                </TextBlock>

                <TextBlock Margin="0,0,0,8">
                    <Run Text="Date: " FontWeight="Bold"/>
                    <Run Text="{Binding ReleaseDate, Mode=OneWay}"/>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
                    <Run Text="Description: " FontWeight="Bold"/>
                    <Run Text="{Binding Description, Mode=OneWay}"/>
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    <Run Text="Github page for issues and requests: " FontWeight="Bold"/>
                    <Hyperlink NavigateUri="{Binding GithubUri, Mode=OneWay}"
                           RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="{Binding GithubUri, Mode=OneWay}"/>
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Close"
                    Width="90"
                    Height="30"
                    IsDefault="True"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
